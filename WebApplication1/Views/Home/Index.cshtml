@model IEnumerable<WebApplication1.Models.EmployeeInfo>
@{
	ViewData["Title"] = "Home Page";
}

<div class="text-center">
	<h1 class="display-4">Welcome</h1>
	@if (Model.Count() == 0)
	{
		<a asp-controller="Employee" asp-action="GenerateDamiData" class="btn btn-primary">Generate 100 Data</a>
	}
</div>


@if (Model.Count() > 0)
{
	<div class="container">
		<div class="row m-2">
			<div class="col-lg-12 py-1">
				<div class="d-flex justify-content-end gap-1">
					<button class="btn btn-primary" onclick="highlightName(1)" id="highlightName1">Highlight Name</button>
					<button class="btn btn-success" onclick="highlightSalary(1)">Highlight Salary</button>
				</div>
			</div>
		</div>
		<table class="table table-bordered" id="employeeTable1">
			<thead>
				<tr>
					
					<th>
						@Html.DisplayNameFor(model => model.Id)
					</th>	<th>
						@Html.DisplayNameFor(model => model.Name)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Salary)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.JoinDate)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Position)
					</th><th>
						@Html.DisplayNameFor(model => model.Manager.Name)
					</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>						
						<td>
							@Html.DisplayFor(modelItem => item.Id)
						</td><td>
							@Html.DisplayFor(modelItem => item.Name)
						</td>
						<td class="salary-cell">
							@Html.DisplayFor(modelItem => item.Salary)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.JoinDate)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Position.Name)
						</td><td>
							@Html.DisplayFor(modelItem => item.Manager.Name)
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
}






